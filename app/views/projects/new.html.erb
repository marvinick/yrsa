<div class="row text-center">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <h1><%= @account.name %></h1>
    <hr>
  </div>
  <div class="col-md-2"></div>
</div>

<%= form_for([current_account, @project]) do |f| %>
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-4">
      <h2 class="text-center">new project</h2>
      <br>
      <div class="">
        <div class="control">
          <%= f.text_field :title, placeholder: 'title', label: false, class: "input ", :maxlength => 25, :size => 40 %>
        </div>
        <br>
        <div class="control">
          <%= f.text_field :description, placeholder: 'description', label: false, class: "input-text", :maxlength => 280, :size => 40  %>
        </div>
      </div>
      <br>
      <br>
    </div>
    <div class="col-md-1"></div>
    <div class="col-md-3 text-center">
      <div class="control">
      

        <% if invitations.present? %>
          <h5>Add your team members here:</h5>
          <br>
          <%= f.collection_check_boxes :user_ids, current_account.users.all, :id, :email, :item_wrapper_class => 'checkbox_container' do |cb| %>
            <% cb.label(class: "check_box") do %>
              <div class="col-xs-1">
                <%= cb.check_box(class: "check_box") %>
              </div>

              <div class="col-xs-4">
                <%= cb.text %>
              </div>
            <% end %>
          <% end %>
        <% else %>
          <h5>No one?! Go invite some users</h5>
        <% end %>
      </div>
      <br>
      <br>
      <div class="row text-center">
        <%= f.submit "add project", class:"btn btn-warning btn-lg" %>
        <%= link_to "never mind", account_path(current_account), class: "btn btn-default btn-lg" %>
      </div>
    </div>

    <div class="col-md-2"></div>
  </div>

<% end %>
