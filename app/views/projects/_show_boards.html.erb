<% @project.boards.order('updated_at DESC').each do |board| %>
  <h1><%= board.note %></h1>
  <%= link_to "edit", edit_account_project_board_path(current_account, @project, board), remote: true %>
  <%= link_to "remove it", [current_account, @project, board], remote: true, method: :delete, data: { confirm: "Are you sure you want to remove this?"}, class: "btn btn-default btn-lg" %> 
<% end %>
