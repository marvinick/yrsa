<% @title= @project.title %>



		<%= render "header" %>

	<div class="row">
		<% if @project.user_id == current_user.id %>
			<div class="col-md-4">
				<%= link_to account_project_details_path(current_account, @project, @details), class:"project-box-link" do %>
					<div class="project-box">
				  	<p class="project-box-header">Details</p>
						<%= render "details" %>
					</div>
				<% end %>
			</div>
			<div class="col-md-4">
				<%= link_to account_project_items_path(current_account, @project, @items), class:"project-box-link" do %>
					<div class="project-box">
						<p class="project-box-header">Items</p>
						<%= render "cards" %>
					</div>
				<% end %>
			</div>
			<div class="col-md-4">
				<%= link_to account_project_invitations_path(current_account, @project, @invitations), class:"project-box-link" do %>
					<div class="project-box">
						<p class="project-box-header">Members</p>

						<% @project.users.last(4).each do |user| %>
				      <% if user.email != current_account.owner.email %>
				        <div class="project-box-preview-member">
				          <%= user.email %>
				        </div>
				        <br>
				      <% end %>
				    <% end %>
					</div>
				<% end %>
			</div>
			<div class='col-md-4'>
				<%= link_to account_project_boards_path(current_account, @project, @boards), class:"project-box-link" do %>
					<div class="project-box">
						<%= render "boards" %>
					</div>
				<% end %>
			</div>
		<% end %>
 	 	<div class="col-md-4">
			<%= link_to activities_path, class:"project-box-link" do %>
				<div class="project-box">
					<p class="project-box-header">Activities</p>

				</div>
			<% end %>
		</div>

		<div class="col-md-4">
			<%= link_to account_project_challenges_path(current_account, @project, @challenges), class:"project-box-link" do %>
				<div class="project-box">
					<p class="project-box-header">Challenges</p>
		
					<% @project.challenges.last(4).each do |c| %>
					  <div class="project-box-preview-challenge">
					    <p class="project-box-preview-text"><%= c.name %></p>
					  </div>
					<% end %>

				</div>
			<% end %>
		</div>
	</div>


<br>

<%= render "footer" %>
