<ul class="breadcrumbs">
  <li><a href="#"><%= link_to "Home", account_path(current_account) %></a></li>
  <li><a href="#"><%= link_to "Rooot", root_url %></a></li>
  <li><a href="#">Summer 15</a></li>
  <li>Italy</li>
</ul>
<div class="columns">
  <div class="column is-12">
    <p class="title is-4">
      project <%= @project.title %>
    </p>
    <p class="subtitle is-6">account <%= link_to @account.name, account_path(@account) %></p>
  </div>
</div>
<hr>
<div class="columns">
  <div class="column is-6">
    <p class="subtitle is-6">was cretead <%= time_ago_in_words(@project.created_at) %> ago</p>
    <p class="subtitle is-6"><%= @project.items.count %></p>

  </div>
  <div class="column is-6">
    <p class="title is-5">Users</p>
    <p class="subtitle is-6"><%= @project.users.count %></li>
  </div>
</div>
<hr>
<%= area_chart @project.items.group_by_day(:created_at).count, library: {backgroundColor: "#efedea", height: 300} %>

<nav class="level is-mobile">
  <div class="level-item has-text-centered">
    <div>
      <p class="title"><%= link_to "Edit", edit_account_project_path(current_account, @project), class: "button is-small is-info" %>
    </div>
  </div>
  <div class="level-item has-text-centered">
    <div>

      <p class="title">  <%= link_to "Delete", [current_account, @project], method: :delete, data: { confirm: "Are you sure you want to remove this?"}, class: "button is-small is-warning" %></p>
    </div>
  </div>
</nav>
<hr>


  <div>
    <%= link_to "+ Item", new_account_project_item_path(current_account, @project), class: "button is-primary is-medium" %>
  </div>

  <nav class="level">
    <div class="level-item has-text-centered">
      <div>
        <p class="heading"></p>
        <p class="level-item has-text-centered heading">
          all items
        </p>
      </div>
    </div>
  </nav>

  <div class="row">

    <% @project.items.each do |item| %>
      <div class="col-md-4">
        <div class="box is-primary">
          <article class="media">
            <div class="media-left">
              <figure class="image is-64x64">
                <img src="http://bulma.io/images/placeholders/128x128.png" alt="Image">
              </figure>
            </div>
            <div class="media-content">
              <div class="content">
                <p>
                  <li><strong><%= link_to item.name, account_project_item_path(current_account, @project, item) %></strong> </li>
                  <li><small><%= item.content %></small></li>
                  <br>
                </p>
              </div>
              <nav class="level is-mobile">
                <div class="level-left">
                  <a class="level-item">
                    <%= link_to edit_account_project_item_path(current_account, @project, item) do %>
                      <span class="icon is-small"><i class="fa fa-cogs"></i></span>
                    <% end %>
                  </a>
                  <a class="level-item">
                    <%= link_to account_project_item_path(current_account, @project, item), method: :delete, data: { confirm: "Are you sure you want to remove this?"} do %>
                      <span class="icon is-small"><i class="fa fa-trash"></i></span>
                    <% end %>
                  </a>
                </div>
              </nav>
            </div>
          </article>
        </div>
      </div>
    <% end %>

  </div>
