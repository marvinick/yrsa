<nav class="breadcrumb has-arrow-separator" aria-label="breadcrumbs">
  <ul>
    <li><a href="#"><%= link_to "Home", root_url %></a></li>
    <li><a href="#"><%= link_to current_account.name, account_url(current_account) %></a></li>
  </ul>
</nav>

<nav class="level">
  <div class="level-item has-text-centered">
    <div>
      <p class="heading">project</p>
      <p class="level-item has-text-centered title">
        <%= @project.title %>
      </p>
    </div>
  </div>
</nav>

<nav class="level is-mobile">
  <div class="level-item has-text-centered">
    <div>

      <%= link_to "New Item", new_account_project_item_path(current_account, @project), class: "button is-small is-primary" %>
    </div>
  </div>
  <div class="level-item has-text-centered">
    <div>
      <p class="title"><%= link_to "Edit", edit_account_project_path(current_account, @project), class: "button is-small is-info" %>
    </div>
  </div>
  <div class="level-item has-text-centered">
    <div>

      <p class="title">  <%= link_to "Delete", [current_account, @project], method: :delete, data: { confirm: "Are you sure you want to remove this?"}, class: "button is-small is-warning" %></p>
    </div>
  </div>
</nav>
<hr>
<nav class="level">
  <div class="level-item has-text-centered">
    <div>
      <p class="heading"></p>
      <p class="level-item has-text-centered heading">
        all items
      </p>
    </div>
  </div>
</nav>
<div class="row">
  <div class="tile">
  <% @project.items.each do |item| %>
    <div class="col-md-4">
      <div class="box is-primary">
      <article class="media">
        <div class="media-left">
          <figure class="image is-64x64">
            <img src="http://bulma.io/images/placeholders/128x128.png" alt="Image">
          </figure>
        </div>
        <div class="media-content">
          <div class="content">
            <p>
              <strong><%= link_to item.name, account_project_item_path(current_account, @project, item) %></strong> <small><%= item.content %></small>
              <br>
            </p>
          </div>
          <nav class="level is-mobile">
            <div class="level-left">
              <a class="level-item">
                <%= link_to edit_account_project_item_path(current_account, @project, item) do %>
                  <span class="icon is-small"><i class="fa fa-cogs"></i></span>
                <% end %>
              </a>
              <a class="level-item">
                <%= link_to account_project_item_path(current_account, @project, item), method: :delete, data: { confirm: "Are you sure you want to remove this?"} do %>
                  <span class="icon is-small"><i class="fa fa-trash"></i></span>
                <% end %>
              </a>

            </div>
          </nav>
        </div>
      </article>
    </div>
  <% end %>
  </div>
</div>
