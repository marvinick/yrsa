<div class="row text-center">
  <div class="dropdown-container">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
      <h1><%= @project.title %></h1>
    </a>
    <ul class="dropdown-menu">
      <li> <%= link_to @account.name, account_path(@account) %></li>
      <% if @project.user_id == current_user.id %>
      <li role="separator" class="divider"></li>
      <li>
        <%= link_to "edit project", edit_account_project_path(current_account, @project) %>
      </li>
      <% end %>
    </ul>
  </div>
  <br>
  <div class="subtitle">
    <h4><%= @project.description %></h4>
  </div>
  <br>
  <% if @project.user_id == current_user.id %>
    <li class="text-center"><%= link_to "add item", new_account_project_item_path(current_account, @project), class: "btn btn-default btn-lg" %></li>
  <% end %>
</div>

<br>

<div class="row">

  <% @project.items.each do |item| %>
    <div class="col-md-4 col-xs-6">
      <%= link_to account_project_item_path(current_account, @project, item) do %>
      <div class="item">
        <ul>
          <li><h4 class="text-center"><strong><%= item.name %></strong></h4></li>
          <li>
            <%= image_tag(item.image.url(:large), class: "img-responsive") %>
          </li>
        </ul>
      </div>
      <% end %>
      <br>
    </div>
  <% end %>

</div>

<% if @project.user_id == current_user.id %>
<div class="row text-center">
  <h3>How many items? <%= all_items %></h3>
  <h3>Reviewed by <%= project_reviewers %> people / person</h3>
  <h3> How many rateable details? <%= details_count %></h3>
  <h3>Project rating: <%= project_rating %></h3>
  <h3>Reviews: <%=  project_reviews_count.sum %></h3>
</div>
<% end %>

<hr>
<h3 class="text-center"><small>comments section</small></h3>
<br>
<%= link_to "post message to the board", new_account_project_board_path(current_account, @project), remote: true, class: "btn btn-success btn-lg" %>
<br>
<br>
<div class="row">
  <div class="board-show">
    <%= render "show_boards" %>
  </div>
</div>

<div id="board-modal" class="modal"></div>

<div id="footer">
  <div class="icon-bar">
    <%= link_to account_path(current_account) do %>
      <i class="fa fa-book"> </i>
    <% end %>
    <a href="#"><i class="fa fa-"></i></a>
    <%= link_to root_url do %>
      <span class="fa fa-home"></span>
    <% end %>
    <a href="#"><i class="fa fa-"></i></a>

    <%= link_to edit_account_project_path(current_account, @project) do %>
      <i class="fa fa-gear"></i>
    <% end %>
  </div>
  <div class="container">

  </div>
</div>
