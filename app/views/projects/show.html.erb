<h4><%= @project.title %></h4>
<% @project.items.each do |item| %>
  <h1><%= link_to item.name, account_project_item_path(current_account, @project, item) %></h1>
  <li><%= link_to "Edit", edit_account_project_item_path(@account, @project, item) %>
  <%= link_to "Delete", account_project_item_path(current_account, @project, item), method: :delete, data: { confirm: "Are you sure you want to remove this?"} %>
<% end %>
<%= link_to "New Item", new_account_project_item_path(@account, @project) %>
