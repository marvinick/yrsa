<p class="title"><%= @project.title %></p>
<div class="tile is-ancestor">
<% @project.items.each do |item| %>
 <div class="tile is-parent">
   <article class="tile is-child box">
     <p class="title"><%= link_to item.name, account_project_item_path(current_account, @project, item) %></p>
     <p class="subtitle"><%= link_to "Edit", edit_account_project_item_path(current_account, @project, item) %></p>
     <p class="subtitle"><%= link_to "Delete", account_project_item_path(current_account, @project, item), method: :delete, data: { confirm: "Are you sure you want to remove this?"} %></p>
   </article>
 </div>
<% end %>
</div>

<%= link_to "New Item", new_account_project_item_path(current_account, @project), class: "" %>
