<div class="row text-center">
  <div class="dropdown-container">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
      <h1><%= @project.title %></h1>
    </a>
    <ul class="dropdown-menu">
      <li> <%= link_to @account.name, account_path(@account) %></li>
      <% if @project.user_id == current_user.id %>
      <li role="separator" class="divider"></li>
      <li>
        <%= link_to "edit project", edit_account_project_path(current_account, @project) %>
      </li>
      <% end %>
    </ul>
  </div>

  <div class="subtitle">
    <h4><%= @project.description %></h4>
  </div>
</div>

<div class="row">
  <div class="col-md-6">
    <% if @project.user_id == current_user.id %>
      <li class="text-center"><%= link_to "add item", new_account_project_item_path(current_account, @project), class: "btn btn-default btn-xs" %></li>
    <% end %>
  </div>
  <div class="col-md-6 text-center">
    <div class="dropdown-container">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
        <button class="btn bnt-def">Search</button>
      </a>
      <ul class="dropdown-menu" style="padding-left: 30px;">
        <li>
        <%= form_tag(account_project_path, method: :get) do %>
          <li><%= text_field_tag :term, params[:term]  %></li>
          <li><%= submit_tag 'Search', class:"btn btn-defaul" %></li>
        <% end %>
        </li>
      </ul> 
    </div>
  </div>
</div>

<div class="row">
  <% if @items.present? %>
    <% @items.each do |item| %>
      <div class="col-md-4 col-xs-6">
        <%= link_to account_project_item_path(current_account, @project, item) do %>
          <div class="item">
            <%= image_tag(item.image.url(:large), class: "img-responsive") %>
            <h4><strong><%= item.name %></strong></h4>
          </div>
          <br>
        <% end %>
      </div>
    <% end %>
  <% else %>
    <div class="boxy">
      <h3>cant' find anything with that search term</h3>
    </div>
  <% end %>
</div>


<div class="row">
<% if @project.user_id == current_user.id %>
  <div class="col-md-4 col-xs-4">
    <div class="stats1">
      <h5>Reviewers: <%= project_reviewers %> </h5>
    </div>
  </div>
  <div class="col-md-4 col-xs-4">
    <div class="stats2">
      <h5>Project rating: <%= project_rating %></h5>
    </div>
  </div>
  <div class="col-md-4 col-xs-4">
    <div class="stats3">
      <h5>Reviews: <%=  project_reviews_count.sum %></h5>
    </div>
  </div>
<% end %>
</div>
<br>
<div class="row">
  <div class="board-show">
      <div class="text-center">
        <%= link_to "message board", new_account_project_board_path(current_account, @project), remote: true, class: "btn btn-success btn-lg " %>
      </div>
    <%= render "show_boards" %>
  </div>
</div>

<div id="board-modal" class="modal"></div>

<div id="footer">
  <div class="icon-bar">
    <%= link_to account_path(current_account) do %>
      <i class="fa fa-book"> </i>
    <% end %>
    <a href="#"><i class="fa fa-"></i></a>
    <%= link_to root_url do %>
      <span class="fa fa-home"></span>
    <% end %>
    <a href="#"><i class="fa fa-"></i></a>

    <%= link_to edit_account_project_path(current_account, @project) do %>
      <i class="fa fa-gear"></i>
    <% end %>
  </div>
  <div class="container">

  </div>
</div>
