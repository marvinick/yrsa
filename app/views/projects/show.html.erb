<div class="row text-center">
  <h5>account <%= link_to @account.name, account_path(@account) %> </h5>
  <h2><%= @project.title %></h2>
  <h4><%= @project.description %></h4>
  <%= link_to edit_account_project_path(current_account, @project) do %>
    <span class="fa fa-pencil fa-2x"></span>
  <% end %>
  <%= link_to "Add new item", new_account_project_item_path(current_account, @project), class: "btn btn-success" %>
</div>
<br>
<br>
<div class="row text-center">
  <% if @project.items.count < 2 %>
    <h2><%= @project.items.count %><small> item</small></h2>
  <% else %>
    <h2><%= @project.items.count %><small> items</small></h2>
  <% end %>
</div>

<div class="row">
<% @project.items.each do |item| %>
  <div class="col-md-4">
    <div class="box">
      <h3><%= link_to content_tag(:span, item.name), account_project_item_path(current_account, @project, item) %></h3>
      <br>
      <h5><%= item.content.first(100) %> </h5>
      <small>Details to rate <%= item.details.count %></small>
    </div>
  </div>
<% end %>
</div>
