<nav class="level">
  <div class="level-item has-text-centered">
    <div>
      <p class="heading">project</p>
      <p class="level-item has-text-centered title">
        <%= @project.title %>
      </p>
    </div>
  </div>
</nav>

<%= form_for([current_account, @project]) do |f| %>
<div class="columns formly">
  <div class="column is-2"></div>
  <div class="column is-8">
    <div class="field">
      <p class="title is-4 has-text-centered">edit project</p>

        <%= f.hidden_field :account_id %>

        <div class="control">
            <%= f.text_field :title, placeholder: 'title', label: false, class:"input is-medium" %>
        </div>
        <br>
        <%= f.text_area :description, placeholder: 'write away', label: false, class:"input is-medium" %>
        <br>
        <br>
        <br>
        <div class="row">
          <div class="col-md-3"></div>
          <div class="col-md-6 has-text-centered">
            <p class="title is-6">Add your team members here:</p>
            <%= f.collection_check_boxes :user_ids, current_account.users.all, :id, :email, :item_wrapper_class => 'checkbox_container' do |cb| %>
              <% cb.label {cb.check_box(class: "checkbox") + cb.text} %>
            <% end %>
          </div>
          <div class="col-md-3"></div>
        </div>
    </div>
  </div>
  <div class="column is-2"></div>
</div>
<br>

<div class="has-text-centered">
  <%= f.submit "change it", class: "button is-primary is-medium" %>
  <%= link_to "never mind", :back, {:class=>"button is-warning is-medium"} %>
</div>
<% end %>
<br>
<div class="has-text-centered">
  <p class="subtitle is-4">or, you can remove it</p>
  <%= link_to "be gone !!", [current_account, @project], method: :delete, data: { confirm: "Are you sure you want to remove this?"}, class: "button is-danger is-medium" %>
</div>
