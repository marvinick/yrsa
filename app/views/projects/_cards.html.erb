<div class="row">
  <% if @items.present? %>
    <% @items.each do |item| %>
      <%= link_to account_project_item_path(current_account, @project, item), class: 'link-to-text-color' do %>
        <div class="col-md-4 col-xs-6">
          <%= image_tag(item.image.url(:large), class: "img-responsive") %>
          <h4><%= item.name %></h4>
        </div>
      <% end %>
    <% end %>
  <% else %>
    <div class="boxy">
      <h3>cant' find anything with that search term</h3>
    </div>
  <% end %>
</div>
