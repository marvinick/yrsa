<div class="row">
  <div class="col-md-4">
    <h4><strong>enter an attribute</strong></h4>

      <%= form_for ([current_account, @project, @detail]), remote: true, html: {} do |f| %>
        <% f.hidden_field :project_id %>

          <li><%= f.text_field :name, placeholder: "4 characters minimum", class: "detail-text", id: "details_form" %>   <%= f.button "add", class: "btn btn-success btn-xs" %></li>

      <% end %>
    
  </div>

  <div class="col-md-8">
    <br>
    <div id="details">
      <%= render @details %>
    </div>
    <h5><%= link_to "more . . .", account_project_details_path(current_account, @project, @details), class: "link-to-text-color" %></h5>
  </div>
</div>
