<div class="col-md-4 col-sm-5 col-xs-12">
  <div class="project-board">
    <h3 class="text-center"><icon class="fa fa-drivers-license"></icon> details</h3>
    <hr>
    <%= form_for ([current_account, @project, @detail]), remote: true, html: {} do |f| %>
      <% f.hidden_field :project_id %>
        <li><%= f.text_field :name, placeholder: "", class: "detail-text", id: "details_form" %>   <%= f.button "add", class: "btn btn-success btn-xs" %></li>
    <% end %>
    <br>
    <div id="details">
      <%= render @details %>
    </div>
    <br>
    <h5>
      <%= link_to "more . . .", account_project_details_path(current_account, @project, @details), remote: true, class: "link-to-text-color" %>
    </h5>
</div>


<div id="product-modal" class=""></div>
