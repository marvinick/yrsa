<%= form_for([current_account, @project], remote: true) do |f| %>
  <div class="formly2">
    <%= render "shared/errors", obj: @project %>
    <div class="control">
      <%= f.text_field :title, placeholder: 'title (new project)', label: false, class: "input ", :maxlength => 25, :size => 40 %>
    </div>
    <br>
    <div class="control">
      <%= f.text_area :description, placeholder: 'description', label: false, class: "input", :maxlength => 280, :size => 10  %>
    </div>

    <div class="row pull-right">
      <%= f.submit "add project", class:"btn btn-default btn-xs" %>
      <%= link_to "cancel", root_url, class: "btn btn-default btn-xs" %>
    </div>
    <br>
    <br>
  </div>
<% end %>
