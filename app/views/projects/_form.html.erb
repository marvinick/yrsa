<div class="field">
  <%= form_for([current_account, @project]) do |f| %>
    <%= f.hidden_field :account_id %>

    <div class="control">
        <%= f.text_field :title, placeholder: 'name', label: false, class:"input" %>
    </div>
    <br>
    <%= f.text_field :description, placeholder: 'description', label: false, class:"input" %>
    <%= f.collection_check_boxes :user_ids, current_account.users.all, :id, :email, :item_wrapper_class => 'checkbox_container' do |cb| %>
       <% cb.label {cb.check_box(class: "checkbox") + cb.text} %>
    <% end %>
    <br>
    <br>
    <%= f.button :submit, class: "button is-primary" %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")), account_path(@account), class: "button is-warning" %>
  <% end %>
</div>
