<%= form_for([current_account, @project], remote: true) do |f| %>
<div class="formly">
  <%= render "shared/errors", obj: @project %>
    <div class="control">
      <%= f.text_field :title, placeholder: 'title (new project)', label: false, class: "input ", :maxlength => 25, :size => 40 %>
    </div>
    <br>
    <div class="control">
      <%= f.text_field :description, placeholder: 'description', label: false, class: "input", :maxlength => 280, :size => 10  %>
    </div>
    <br>
    <% if invitations.present? %>
      <h4>users</h4>
      <br>
      <%= f.collection_check_boxes :user_ids, current_account.users.all, :id, :email, :item_wrapper_class => 'checkbox_container' do |cb| %>
        <% cb.label(class: "check_box") do %>
          <div class="col-xs-1">
            <%= cb.check_box(class: "check_box") %>
          </div>

          <div class="col-xs-4">
            <h6><%= cb.text %></h6>
          </div>
        <% end %>
      <% end %>
    <% else %>
      <h5>No one?! Go invite some users</h5>
    <% end %>

    <div class="pull-right">
      <%= f.submit "add", class:"btn btn-success" %>
      <%= link_to "cancel", account_path(current_account), class: "btn btn-default" %>
    </div>
  </div>
</div>
<% end %>
