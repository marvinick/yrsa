<div class="row">
  <div class="col-md-offset-3 col-md-6">
    <div class="content">


        <%= render "plan_picker" %>

    </div>
    <% if current_account.stripe_subscription_id.present? %>
      <hr>
      <div class="text-center text-danger">
        <small>
          <%= link_to "Cancel your subscription", account_cancel_subscription_path, method: :delete, data: { confirm: "Are you sure you would like to cancel your subscription?"}, class: "btn btn-danger" %>
        </small>
      </div>
    <% end %>
  </div>
</div>

<script src="https://checkout.stripe.com/checkout.js"></script>
<%= javascript_include_tag "plans" %>
