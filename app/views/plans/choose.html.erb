<div class="row">
  <div class="col-md=offset-3 col-md-6">
    <div class="content">
      <h2>Choose a plan</h2>

      <em>Plans are billed monthly.</em>

      <%= simple_form_for(current_account, url: account_choose_plan_url) do |account| %>
        <% @plans.each do |plan| %>
          <%= account.radio_button :plan_id, plan.id, data:
          {
            name: plan.name, amount: plan.amount
          } %>
          <%= account.label "plan_id_#{plan.id}", plan.name %>
          (<%= money(plan.amount) %>) <br>
        <% end %>
        <%= account.submit "Pay", class: "btn btn-primary", id: "checkout-btn"%>
      <% end %>
    </div>
    <% if current_account.stripe_subscription_id.present? %>
      <hr>
      <div class="text-center text-danger">
        <small>
          <%= link_to "Cancel your subscription", account_cancel_subscription_path, method: :delete, data: { confirm: "Are you sure you would like to cancel your subscription?"} %>
        </small>
      </div>
    <% end %>
  </div>
</div>

<script src="https://checkout.stripe.com/checkout.js"></script>
<%= javascript_include_tag "plans" %>
