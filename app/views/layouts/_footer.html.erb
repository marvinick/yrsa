<div id="footer">
  <div class="icon-bar">
    <%= link_to root_url do %>
      <span class="fa fa-home"></span>
    <% end %>

    <a href="#"><i class="fa fa-"></i></a>

    <% if user_signed_in? %>
      <% if @account %>
        <%= link_to account_lookups_path(@account) do %>
          <i class="fa fa-search"> </i>
        <% end %>
      <% elsif current_account %>
        <%= link_to account_lookups_path(current_account) do %>
          <i class="fa fa-search"> </i>
        <% end %>
      <% else %>
        <i class="fa fa-gear" ><i>
      <% end %>



      <a href="#"><i class="fa fa-"></i></a>

      <%= link_to destroy_user_session_path, method: :delete, data: { confirm: "Are you sure you want to log out?"}  do %>
        <i class="fa fa-user"></i>
      <% end %>

      <% end %>
  </div>

  <div class="container"></div>
</div>
