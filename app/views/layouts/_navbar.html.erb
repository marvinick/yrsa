<nav class="navbar">
  <div class="navbar-brand">
    <%= link_to root_url do %>
    <a class="navbar-item">
      <img src="http://bulma.io/images/bulma-logo.png" alt="Bulma: a modern CSS framework based on Flexbox" width="112" height="28">
    </a>
    <% end %>

    <div class="navbar-item is-hidden-desktop">
      <a><%= link_to "Home", root_url %></a>
    </div>
    <div class="navbar-item is-hidden-desktop">
      <%= link_to "Welcome", home_path %>
    </div>

  </div>

  <div id="navMenubd-example" class="navbar-menu">
    <div class="navbar-start">

    </div>
    <div class="navbar-item">
      <%= link_to "Home", root_url %>
    </div>
    <div class="navbar-item">
      <%= link_to "Welcome", home_path %>
    </div>

    <% if user_signed_in? %>
    <div class="navbar-end">
      <div class="navbar-item has-dropdown is-hoverable">
        <a class="navbar-link is-active is-center" href="">
          . . .
        </a>
        <div class="navbar-dropdown is-right">
          <% if current_user.admin? %>
            <%= link_to admin_root_path do %>
              <%= content_tag :span, "Admin", :class => "navbar-item" %>
            <% end %>
          <% end %>
          <div class="navbar-item">
            <div>
              <p class="is-size-6-desktop">
                <strong class="has-text-info"><%= current_user.email %></strong>
              </p>

                <small>
                  <%= link_to destroy_user_session_path, method: :delete do %>
                    <%= content_tag :span, "Sign out" %>
                  <% end %>
                </small>

            </div>
          </div>
        </div>
      </div>
      <% else %>
        <div class="navbar-item has-dropdown is-hoverable">
          <a class="navbar-link is-active" href="">
            Access
          </a>
          <div class="navbar-dropdown">
            <%= link_to new_account_path do %>
              <%= content_tag :span, "Create a new account", :class => "navbar-item" %>
            <% end %>
            <%= link_to new_user_session_path do %>
              <%= content_tag :span, "Sign in", :class => "navbar-item" %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</nav>
