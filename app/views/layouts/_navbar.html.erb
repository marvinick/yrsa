<nav class="navbar navbar-default" style="list-style-type: none;">
  <div class="container-fluid">
    <div class="navbar-header">
      <% if user_signed_in? %>
        <li class="navbar-brand" href="#"><%= link_to "eagor", home_path %></li>
      <% else %>
        <li><%= link_to "sign in", new_user_session_path, class: "btn btn-default" %></li>
      <% end %>
    </div>

    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav navbar-left">

      </ul>

      <ul class="nav navbar-nav navbar-center">
        <% if user_signed_in? %>
          <li> <%= link_to " home", root_url, class: "fa fa-home" %></li>
          <% if controller_name != "activities" %>
            <li><%= link_to " activity", activities_path, class: "fa fa-history" %></li>
          <% end %>
          <li><%= link_to " lookup", lookups_path, remote: true, class: "fa fa-search" %></li>
        <% end %>

      </ul>

      <ul class="nav navbar-nav navbar-right">

        <% if user_signed_in? %>
          <li class="nav-item btn-group" data-behavior="notifications" data-notifications='<%= render template: "notifications/index", formats: [:json] %>'>
            <a class="dropdown-toggle nav-link" type="button" data-behavior="notifications-link" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <span class="fa fa-bell" data-behavior="unread-count"></span>
            </a>
            <div class="dropdown-menu" aria-labelledby="dropdownMenu1" data-behavior="notification-items">
              <% if current_user.notifications.unread.empty? %>
                No notifications
              <% end %>
            </div>
