<div uk-sticky="sel-target: .navbar; cls-active: uk-navbar-sticky">
  <nav class="navbar navbar-expand-lg navbar-light bg-light navbar-white">
    <div class="container ">
      <a class="navbar-brand" href="#">
        <%= link_to home_path do %>
          <li class="navbar-brand" href="#"><icon class="fab fa-twitter" /></li>
        <% end %>
      </a>

      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">

          <ul class="navbar-nav mr-auto">
            <% if user_signed_in? %>
            <li class="nav-link">
              <a>
              <%= link_to root_url do %>
                <span uk-icon="home" class="uk-icon-link"></span>

              <% end %>
              </a>
            </li>
            <li class="nav-item">
              <!-- <div class="books-search">
                <input type="text" id="books-search-txt" autofocus>
                <div class="results" id="books-search-results"></div>
              </div> -->
              <%= link_to "search", lookups_path, id:"new_detail", class:"popover-toggle"  %>
              <div id="new-detail" class="is-hidden" >
                <%= render "lookups/index" %>
              </div>
            </li>
            <% end %>
          </ul>


        <li class="nav-item dropdown">
          <a class="nav-link" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <span uk-icon="user" class="uk-icon-link"></span>


          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <% if user_signed_in? %>
              <% if current_user.admin? %>
                <a class="dropdown-item"><<%= link_to "Admin", admin_root_path %></a>
              <% end %>

              <a class="dropdown-item"><%= current_user.email %></a>
              <a role="separator" class="divider"></a>
              <div class="dropdown-item">
                <%= link_to "logout", destroy_user_session_path, class:"btn btn-sm btn-danger outline", method: :delete %>
              </div>
            <% else %>
              <p class="black-link"><%= link_to "sign in", new_user_session_path %></p>
            <% end %>
          </div>
        </li>
      </div>
    </div>
  </nav>
</div>

<div id="product-modal" class="modal"></div>

<script>
  $(function(){

      $('#new_detail').popover({
        html : true,
        offset: '110px',
        content: function() {
          return $('#new-detail').html();
        }
    });
  });
</script>
