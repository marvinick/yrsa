<div class="row text-center">
  <h2>Reviews</h2>
  <h3>The amount of the details that are reviewable: <%= count_details %></h3>
</div>

<div class="row">
  <% set_item.reviews.each do |review| %>
  <div class="col-md-3 col-xs-6">
    <div class="box">
      <% review.properties.each do |name, value| %>
        <li><%= name %> : <%= value %></li>
      <% end %>
      <% if current_user.id == review.user_id %>
        <%= link_to "edit", edit_account_project_item_review_path(current_account, set_project, @item, review) %>
      <% end %>
    </div>
  </div>
  <% end %>
</div>
