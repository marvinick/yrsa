<% total_rv = [] %>
<% total_rv << @review.value %>
<% if total_rv.any? %>
  <div id="star-rating" data-score= <%= total_rv.sum / total_rv.count %> ></div>
<% else %>
  <strong>Nothing yet</strong>
<% end %>

<script>
$('#star-rating').raty({
  path: '/assets/',
  readOnly: true,
  score: function() {
    return $(this).attr('data-score');
  }
});

</script>
