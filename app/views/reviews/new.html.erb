<p class="heading has-text-centered">Back to item <%= link_to @item.name, account_project_item_path(current_account, set_project, @item) %></p>

<div class="item has-text-centered">
  <p class="title "><%= @detail.name %></p>
  <p class="heading"><%= @detail.description %></p>
</div>
<div class="columns">
  <div class="column is-3"></div>
  <div class="formly column is-6">

    <%= form_for([current_account, set_project, set_item, @detail, @review]) do |f| %>
      <%= f.hidden_field :detail_id %>
      <div class="control">
        <p class"heading">from 1 as being really bad to 5 as being great</p>
        <div id="star-rating"></div>
      </div>
      <br>
      <div class="control">
        <p class="heading">this is optional, but it'll definitely more flesh out rating</p>
        <%= f.text_area :description, class: "input is-medium" %>
      </div>
      <br>
      <%= f.button :submit, class: "button is-primary is-medium" %>
      <%= link_to "Back", account_project_item_detail_path(current_account, set_project, set_item, @detail), class: "button is-warning is-medium" %>
    <% end %>
  </div>
  <div class="column is-3"></div>
</div>

<script>
  $('#star-rating').raty({
    path: '/assets/',
    scoreName: 'review[value]'
  });
</script>
