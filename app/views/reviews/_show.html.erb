<div class="modal-dialog modal-sm">
  <div class="modal-content">

    <div class="modal-body">
      <% keys = [] %>
      <% values = [] %>

      <% @review.properties.each do |name, value| %>
      <% keys << name %>
      <% values << value.to_i %>

        <h6><strong><%= name %></strong>  </h6>
        <div class="star-rating" data-score= <%= value %>, style= "zoom:90%;" ></div>
        <br>
      <% end %>

      <% if @review.description.present? %>
        <h6>"<strong><%= @review.description %></strong> "</h6>
      <% end %>
      <br>
      <h5 class="text-right"><strong>Overall rating <%= (values.sum.to_f / keys.uniq.size).round rescue 0 %> <%= image_tag('star-on.png') %></strong></h5>
    </div>


      <div class="modal-footer">
        <h6 class="text-left"><small><%= @review.user.email %> - <%= time_ago_in_words(@review.created_at) %> ago </small></h6>
        <% if current_user.id == @review.user_id %>
          <%= link_to "edit", edit_account_project_item_review_path(current_account, @project, @item, @review), remote: true, class: "btn btn-xs btn-success" %>
          <%= link_to "remove", [current_account, @project, @item, @review], method: :delete, data: { confirm: "Are you sure you want to remove this?"}, class: "btn btn-xs btn-danger text-right" %>
        <% end %>
      </div>

  </div>
</div>

<script>
  $('.star-rating').raty({
    path: '/assets/',
    readOnly: true,
    score: function() {
      return $(this).attr('data-score');
    }
  });
</script>
