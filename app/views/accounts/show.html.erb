<div class="row text-center">
  <h3><small>account</small></h3>
  <h2><%= @account.name %></h2>
</div>

<div class="row">
  <div class="col-md-3"> </div>
  <div class="col-md-2 tile">
    <h4><%= link_to content_tag(:span, "manage users"), account_users_path(@account, @users) %></h4>
  </div>
  <div class="col-md-2 tile">
    <h4><%= link_to content_tag(:span, "add project"), new_account_project_path(@account)%></h4>
  </div>
  <div class="col-md-3"> </div>
</div>
<hr>
<div class="row">
  <h2 class="text-center">projects</h2>
  <% @account.projects.each do |project| %>
    <div class="col-md-4">
      <div class="box">
        <h3><%= link_to content_tag(:span, project.title), account_project_path(@account, project) %></h3>
        <br>
        <h4><%= project.description %></h4>
      </div>
    </div>
  <% end %>
</div>
