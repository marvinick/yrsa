<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <h1 class="text-center"><%= @account.name %></h1>
    <hr>
  </div>
  <div class="col-md-2"></div>
</div>

<div class="row">
  <div class="col-md-3"> </div>
  <div class="col-md-6 text-center">
    <%= link_to "manage users", account_users_path(@account, @users), class: "btn btn-default pull-left" %>
    <%= link_to "add project", new_account_project_path(@account), class: "btn btn-default pull-right" %>
  </div>
  <div class="col-md-3"> </div>
</div>
<br>
<div class="row text-center">
  <h2>projects</h2>
</div>
<div class="row ">
  <div class="col-md-2"></div>
  <% @account.projects.each do |project| %>
    <div class="col-md-4 col-xs-6">
      <%= link_to account_project_path(@account, project) do %>
        <div class="box">
          <h4><%= project.title %></h4>
        </div>
      <% end %>
    </div>
  <% end %>
  <div class="col-md-2"></div>
</div>
