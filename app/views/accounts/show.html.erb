<h2><%= @account.name %></h2>

<% @account.projects.each do |project| %>
  <div class="card">
    <div class="card-content">
      <p class="title">
        <%= link_to project.title, account_project_path(@account, project) %>

      </p>
      <p class="subtitle">
        <%= project.description %>
      </p>
    </div>
    <footer class="card-footer">
      <p class="card-footer-item">
        <span>
          View on <a href="#"><%= link_to "Users", account_users_path(@account, @users) %></a>
        </span>
      </p>
      <p class="card-footer-item">
        <span>
          <a href="#"><%= link_to "Invitations", account_invitations_path(@account, @invitations) %></a>
        </span>
      </p>
      <p class="card-footer-item">
        <span>
          <a href="#"><%= link_to "New Project", new_account_project_path(@account) %></a>
        </span>
      </p>
    </footer>
  </div>
<% end %>
