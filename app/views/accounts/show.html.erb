<nav class="level">
  <div class="level-item has-text-centered">
    <div>
      <p class="heading">account</p>
      <p class="level-item has-text-centered title">
        <%= @account.name %>
      </p>
    </div>
  </div>
</nav>

<nav class="level is-mobile">
  <div class="level-item has-text-centered">
    <div>
      <p class="title"><%= link_to "manage users", account_users_path(@account, @users), class: "button is-info" %>
    </div>
  </div>
  <div class="level-item pull-right">
    <div>
      <p class="title"><%= link_to "add project", new_account_project_path(@account), class: "button is-success" %></p>
    </div>
  </div>
</nav>
<br>
<nav class="level">
  <div class="level-item has-text-centered">
    <div>
      <p class="title is-4">all projects</p>
      <br>
      <p class="subtitle is-5">create a new project for each rating activity </p>
    </div>
  </div>
</nav>


<div class="row">
  <% @account.projects.each do |project| %>
    <div class="col-md-4">
      <div class="box">
        <article class="media">
          <div class="media-content">
            <div class="content">
              <p class="title is-5"><%= link_to content_tag(:span, project.title), account_project_path(@account, project) %></p>
              <br>
              <p class="title is-6"><%= project.description %></p>
            </div>
          </div>
        </article>
      </div>
    </div>
  <% end %>
</div>
