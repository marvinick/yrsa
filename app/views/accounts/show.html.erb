<div class="tile is-ancestor">

  <div class="tile is-vertical is-3">
    <div class="tile">
      <div class="tile is-parent is-vertical">
        <article class="tile is-child notification is-primary">
          <p class="title"><%= @account.name %></p>
          <p class="subtitle is-6">account</p>
          <p class="subtitle is-6"><%= current_user.email %></p>
        </article>
        <article class="tile is-child notification is-warning">

        </article>
        <article class="tile is-child notification is-success">
          <p class="subtitle is-6"><%= link_to "Users", account_users_path(@account, @users), class: "button is-danger" %></p>
          <p class="subtitle is-6"><%= link_to "New Project", new_account_project_path(@account), class: "button is-primary" %></p>
        </article>
      </div>
    </div>
  </div>

  <div class="tile is-vertical is-6">
    <div class="tile">

      <div class="tile is-parent is-vertical">
        <% @account.projects.each do |project| %>
        <article class="tile is-child notification is-info">
          <div class="content">
            <p class="title"><%= link_to project.title, account_project_path(@account, project) %></p>
            <p class="subtitle"></p>
            <div class="content">
              <!-- Content -->
            </div>
          </div>
        </article>
        <% end %>
      </div>

    </div>
  </div>


</div>
