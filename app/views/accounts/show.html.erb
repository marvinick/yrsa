<nav class="level">
  <div class="level-item has-text-centered">
    <div>
      <p class="heading">account</p>
      <p class="level-item has-text-centered title">
        <%= @account.name %>
      </p>
    </div>
  </div>
</nav>

<nav class="level is-mobile">
  <div class="level-item has-text-centered">
    <div>
      <p class="title"><%= link_to "Users", account_users_path(@account, @users), class: "button is-medium is-warning" %>
    </div>
  </div>
</nav>

<hr>

<div>
  <%= link_to "+ New", new_account_project_path(@account), class: "button is-medium is-primary" %>
</div>
<br>
<nav class="level">
  <div class="level-item has-text-centered">
    <div>
      <p class="heading">all projects</p>
    </div>
  </div>
</nav>


<div class="row">
  <% @account.projects.each do |project| %>
    <div class="col-md-4">
      <div class="box">
        <article class="media">
          <div class="media-left">
            <figure class="image is-64x64">
              <img src="http://bulma.io/images/placeholders/128x128.png" alt="Image">
            </figure>
          </div>
          <div class="media-content">
            <div class="content">
              <p class="title is-5"><%= link_to content_tag(:span, project.title), account_project_path(@account, project) %></p>
              <br>
              <p class="subtitle is-6"><%= project.description %></p>
            </div>
          </div>
        </article>
      </div>
    </div>
  <% end %>
</div>
