<% @title = @account.name %>

<div class="formy">
  <div class="container">

    <div class="row text-center">
      <small>account</small>
      <h1><strong><%= @account.name %></strong></h1>
    </div>
    <br>
    <div class="row">
      <div class="col-md-3 col-xs-6 text-center">

        <%= link_to account_billing_path(@account) do %>
          <div class="account_box1">
            <i class="fa fa-credit-card" aria-hidden="true"></i>
            <h4>billing</h4>
          </div>
        <% end %>

      </div>
      <div class="col-md-3 col-sm-4 col-xs-6 text-center">
        <%= link_to account_users_path(@account, @users) do %>
          <div class="account_box1">
            <i class="fa fa-envelope-open-o" aria-hidden="true"></i>
            <h4>invitations</h4>
          </div>
        <% end %>
      </div>
      <div class="col-md-3 col-sm-4 col-xs-6 text-center">
        <%= link_to edit_account_path(@account) do %>
          <div class="account_box1">
            <i class="fa fa-gear" aria-hidden="true"></i>
            <h4>edit</h4>
          </div>
        <% end %>
      </div>
      <div class="col-md-3 col-xs-6 text-center">
        <%= link_to account_choose_plan_url(@account) do %>
        <div class="account_box1">
          <i class="fa fa-clone" aria-hidden="true"></i>
          <h4>plans</h4>
        </div>
        <% end %>
      </div>
    </div>

    <div class="row">
      <div class="col-md-12 col-sm-4 col-xs-12">
        <% if @account.owner.id == current_user.id %>
          <% if @account.stripe_subscription_id.blank? %>
            <%= link_to account_choose_plan_url(@account) do %>
              <div class="box">

                <h5 class="text-center">confirm first</h5>
              </div>
            <% end %>
          <% else %>
            <%= link_to new_account_project_path(@account), remote: true, class: "new-project-button btn btn-success btn-sm" do %>
                <h5> + project</h5>
            <% end %>
          <% end %>
        <% end %>
        <br>
        <br>

      </div>
    </div>
    <div class="row">
      <%= render "projects/index" %>
    </div>
  </div>
</div>

<footer id="footer">
  <div class="icon-bar">
      <i class="fa fa"> </i>

    <a href="#"><i class="fa fa-"></i></a>
    <%= link_to root_url do %>
      <span class="fa fa-home"></span>
    <% end %>
    <a href="#"><i class="fa fa-"></i></a>

      <i class="fa fa"></i>

  </div>
  <div class="container">

  </div>
</footer>


