<div class="row text-center">
  <small>account</small>
  <h1><strong><%= @account.name %></strong></h1>
</div>
<br>
<% if @account.owner.id == current_user.id %>

  <div class="row">
    <div class="col-md-3 col-xs-6">
      <%= link_to account_choose_plan_url(@account) do %>
        <div class="account_box1">
          <%= image_tag 'final-fulton.jpg', class: "img-responsive" %>
          <h3 class="text-center">switch plan</h3>
        </div>
      <% end %>
    </div>
    <div class="col-md-3 col-xs-6">
      <%= link_to account_billing_path(@account) do %>
        <div class="account_box2">
          <%= image_tag 'final-fulton.jpg', class: "img-responsive" %>
          <h3 class="text-center">billing</h3>
        </div>
      <% end %>
    </div>
    <div class="col-md-3 col-xs-6">
      <%= link_to account_users_path(@account, @users) do %>
        <div class="account_box3">
          <%= image_tag 'final-fulton.jpg', class: "img-responsive" %>
          <h3 class="text-center">users</h3>
        </div>
      <% end %>
    </div>
    <div class="col-md-3 col-xs-6">
      <%= link_to edit_account_path(@account) do %>
        <div class="account_box4">
          <%= image_tag 'final-fulton.jpg', class: "img-responsive" %>
          <h3 class="text-center">edit account</h3>
        </div>
      <% end %>
    </div>
  </div>

