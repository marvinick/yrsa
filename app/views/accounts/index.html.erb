<nav class="level">
  <div class="level-item has-text-centered">
    <div>
      <p class="heading">pick an account</p>
      <p class="level-item has-text-centered title">
        all accounts
      </p>
    </div>
  </div>
</nav>


<% if user_signed_in? %>
<div class="tile is-ancestor">
  <div class="tile is-vertical is-12">
    <div class="tile">
      <% current_user.all_accounts.each do |account| %>
        <div class="tile is-parent is-vertical">
          <article class="tile is-child notification is-4">
            <p class="title is-3"><%= link_to content_tag(:span, account.name), account_path(account) %></p>
            <br>
            <p class="subtitle is-6">Projects <%= account.projects.count %></p>
            <p class="subtitle is-6">Members <%= account.users.count %></p>
          </article>
        </div>
      <% end %>
    </div>
  </div>
</div>
<% end %>
