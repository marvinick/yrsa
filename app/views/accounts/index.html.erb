<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6 text-center">
    <h2 class="center"><strong>pick an account</strong></h2>
  </div>
  <div class="col-md-3"></div>
</div>


<% if user_signed_in? %>
<div class="row">
  <% current_user.all_accounts.each do |account| %>
    <div class="col-md-4 box">
      <h3><%= link_to content_tag(:span, account.name), account_path(account) %></h3>
      <br>
      <h5>Projects <%= account.projects.count %></h5>
      <h5>Members <%= account.users.count %></h5>
    </div>
  <% end %>
</div>
<% end %>
