<div class="log-back">
  <%= link_to home_path do %>
    <span class="fa fa-arrow-left fa-2x"></span>
  <% end %>
</div>

<div class="row text-center">
  <div class='boxy'>
    <h1>Create account</h1>
    <br>
    <%= form_for(@account) do |account| %>
      <div class="control">
        <%= account.text_field :name, placeholder: "enter account's name", class: "input text-center" %>
      </div>
      <br>
      <%= account.fields_for :owner do |owner| %>
        <div class="control">
          <%= owner.text_field :email, class: "input text-center", placeholder: "email " %>
        </div>
        <br>
        <div class="control">
          <%= owner.password_field :password, class: "input text-center", placeholder: "password" %>
        </div>
        <br>
        <div class="control">
          <%= owner.password_field :password_confirmation, class: "input text-center", placeholder: "confirm password" %>
        </div>
        <br>
      <% end %>

      <%= account.button "Next", class: "btn btn-info btn-lg" %>
    <% end %>
  </div>

</div>
