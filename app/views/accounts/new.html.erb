<div class="signup-formly">
  <%= form_for(@account) do |account| %>
    <%= account.label :name %>
    <%= account.text_field :name, placeholder: "name", class: "input" %>
    <br>
    <%= account.fields_for :owner do |owner| %>
        <%= owner.label :email %>
        <%= owner.text_field :email, class: "input", placeholder: "email " %>
      <br>
        <%= owner.label :password %>
        <%= owner.password_field :password, class: "input", placeholder: "password" %>
      <br>
        <%= owner.label :password_confirmation %>
        <%= owner.password_field :password_confirmation, class: "input", placeholder: "confirm password" %>
      <br>
    <% end %>
    <br>
      <%= account.button "Signup", class: "btn btn-success text-right" %>
  <% end %>
</div>
