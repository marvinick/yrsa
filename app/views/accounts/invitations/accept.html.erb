<div class="row">
  <div class="content col-md-offset-4 col-md-4">
    <h2>Accepting an invitation</h2>

    You are accepting an invitation to join <%= @invitation.account.name %>

    <% if !user_signed_in? %>
      <%= render "anonymous_accept" %>
    <% else %>
      <%= render "user_accept" %>
    <% end %>

  </div>
</div>
