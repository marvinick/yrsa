<div class="modal-dialog">
  <div class="modal-content">
    <h1>Log in</h1>
    <br>
    <div class="modal-body">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <div class="control">
            <%= f.text_field :email, required: true, autofocus: true, class: "input text-center", placeholder: "email" %>
          </div>
          <br>
          <div class="control">
            <%= f.password_field :password, required: false, class: "input text-center", placeholder: "password" %>
          </div>
          <br>
          <div class="control">
            <%= f.check_box :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>
        </div>
        <br>
        <div class="form-actions">
          <%= f.button :submit, class: "btn btn-lg btn-primary" %>
        </div>
      <% end %>
    </div>
    <br>
    <%= render "devise/shared/links" %>
  </div>
</div>
