<p class="title">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <div class="control">
      <%= f.text_field :email, required: true, autofocus: true, class: "input is-medium", placeholder: "enter email" %>
    </div>
    <br>
    <%= f.text_field :password, required: false, class: "input is-medium", placeholder: "password" %>
    <%= f.check_box :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: "button is-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
