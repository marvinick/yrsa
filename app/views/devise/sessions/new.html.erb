<div class="row">
  <div class="col-md-12 text-center">
    <div class="tab pull-left">
      <button class="tablinks" onclick="openCity(event, 'cards')" id="defaultOpen"><span class="fa fa-home"></span></button>
    </div>
    <div class="tab pull-right">
      <button class="tablinks" onclick="openCity(event, 'lists')"><span class="fas fa-sign-in-alt"></span></button>
    </div>

  <div id="cards" class="tabcontent">
    <br>
    <br>
    <%= render "home/landing" %>
  </div>

  <div id="lists" class="tabcontent">
    <br>
    <br>
    <h2>sign in</h2>
    <br>
    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-6">
        <div class="boxy">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

              <div class="control">
                <%= f.text_field :email, required: true, autofocus: true, class: "input text-center", placeholder: "email" %>
              </div>
              <br>
              <div class="control">
                <%= f.password_field :password, required: false, class: "input text-center", placeholder: "password" %>
              </div>

            <br>
            <div class="control">
              <%= f.button :submit, class: "btn btn-lg btn-success" %>
            </div>
          <% end %>
          <br>
          <%= render "devise/shared/links" %>
          <br>
          <%= link_to "sign up", new_account_path, class:"btn btn-default btn-lg" %>
        </div>
      </div>
      <div class="col-md-3"></div>
    </div>
  </div>
</div>
