<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-body">
      <h1 class="text-center">Search</h1>
      <div class="row">
        <div class="formly text-center">
          <%= form_tag(account_lookups_path, method: :get) do %>

              <div class="control">
                <%= text_field_tag :query, params[:query], class:"input"  %>
              </div>
              <br>
              <div class="control">
                <li><%= submit_tag 'Search', name: nil, class:"btn btn-default btn-lg" %></li>
              </div>

          <% end %>
        </div>

        <% if params[:query].present? %>
          <div class="row text-center">
            <h2>Results</h2>
            <br>
            <div class="col-md-3"></div>
            <div class="col-md-6">
              <% if @pg_search_documents.blank? %>
                <div class="boxy">
                  <h2>no result</h2>
                </div>
              <% else %>
                <div class="boxy">
                  <% @pg_search_documents.each do |pg_search_document| %>
                    <% if pg_search_document.searchable.respond_to?(:title) %>
                        <% if current_user.id == pg_search_document.searchable.user_id %>
                          <h3>
                            <%= link_to pg_search_document.searchable.title, [current_account, pg_search_document.searchable] %>

                            <small>(project)<small>
                          </h3>
                          <hr>
                        <% end %>
                    <% elsif pg_search_document.searchable.class == Item %>
                      <h3>
                         <%= link_to pg_search_document.searchable.name, [current_account, pg_search_document.searchable.project, pg_search_document.searchable] %>
                         <small>(item)</small>
                      </h3>
                      <hr>
                    <% end %>
                  <% end %>
                </div>
              <% end %>

            </div>
            <div class="col-md-3"></div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div id="product-modal" class="modal"></div>
</div>
