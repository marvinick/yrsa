

<tr>
    <td><%= detail.name %> </td>
    <td><%= detail.description %></td>
    <td>
      <button id="edit_detail_<%= detail.id %>" class="popover-toggle btn btn-sm btn-primary outline"  title="edit detail" data-placement="right" >Edit</button>
      <hr>
      <%= link_to "remove", account_project_detail_path(current_account, @project, detail), class:"btn btn-sm btn-danger outline", method: :delete, data: {confirm: "Are you sure?"}, remote: true %>
    </td>

</tr>


    <div class="is-hidden" id="edit-detail_<%= detail.id %>" >
      <%= form_for([current_account, @project, detail]) do |f| %>
        <% f.hidden_field :project_id %>
        <%= f.text_field :name, placeholder: 'name', class: 'input' %>
        <br>
        <%= f.text_field :description, placeholder: 'description', class: 'extra-input' %>
        <br>
        <%= f.button 'edit', class: 'btn btn-primary' %>
      <% end %>

      <script>
        $(function(){
          $('#edit_detail_<%= detail.id %>').popover({
            html : true,
            content: function() {
              return $('#edit-detail_<%= detail.id %>').html();
            }
          });
        });
      </script>
    </div>
