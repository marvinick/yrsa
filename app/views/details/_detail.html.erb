<%= div_for detail do %>
  <div class="details">
    <ul>
      <li class="detail-list">
        <p class="detail-name"><%= detail.name %></p>
        <p class="detail-description"><%= detail.description %></p>
        <li><%= link_to "Edit", edit_account_project_detail_path(current_account, set_project, detail), remote: true %></li>
        <%= link_to "(remove)", account_project_detail_path(current_account, set_project, detail), method: :delete, data: {confirm: "Are you sure?"}, remote: true %>
      </li>
    </ul>
  </div>
<% end %>
