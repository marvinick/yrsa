<div class="row">
    <h1>Latest Activities</h1>
    <br>

    <% @activities.each do |activity| %>
      <div class="col-md-4">
        <div class="boxy">
        <% if activity.trackable %>
          <%= activity.owner.email %>
          reviewed
          <% if activity.trackable.item %>
            <%= activity.trackable.item.name  %>
          <% end %>
        <% end %>
        </div>
      </div>
    <% end %>

  </div>
</div>
