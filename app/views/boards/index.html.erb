<% @title= @project.title + " - announcements"  %>

<%= link_to account_project_path(current_account, @project) do %>

  <div class="formy-back">
    <p class="formy-back-title"><%= @project.title %></p>
  </div>
<% end %>


<div class="formy">
  <p class="board-header">
    Announcement
    <%= link_to "+ New", new_account_project_board_path(current_account, @project), remote: true, class: "og-board-button btn btn-success btn-lg" %>
  </p>
  <hr>
  <div class="row">
    <div class="new-board-button"></div>
    <% @board_weeks.each do |day, boards| %>
      <p class="board-week-header"><%= day.strftime("%B %d %Y") %></h2>
        <div id="boards"></div>
        <div class="row">
          <%= render boards %>
        </div>
      <% end %>
    </div>
  </div>

</div>
