<div class="col-sm-12">
  <div class="invitation-box">
    <h5>
      <%= invitation.email %>
      <li class="dropdown pull-right">
        <a href="#" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
          <span class="fa fa-ellipsis-h"></span>
        </a>
        <ul class="dropdown-menu dropdown-menu-right">
          <li>
            <%= link_to "Remove", account_project_invitation_path(current_account, @project, invitation), method: :delete, data: { confirm: "Are you sure you want to canceled invitation to #{invitation.email}?" } %>
          </li>
        </ul>
      </li>
    </h5>
  </div>
</div>
