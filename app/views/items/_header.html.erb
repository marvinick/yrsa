<%= div_for @item do %>
  <div class="formy">
    <div class="col-md-6">
      <% url = generate_url_attributes_preview(@item.link) %>

      <% if !url.empty? %>
        <%= image_tag(url, class: "img-responsive") %>
      <% end %>

    </div>

    <% if @project.user_id == current_user.id %>
      <%= link_to edit_account_project_item_path(current_account, set_project, @item), remote: true do  %>
        <span class="fa fa-ellipsis-h pull-right"></span>
      <% end %>
    <% end %>
    <%= link_to @project.title, account_project_path(current_account, set_project), class: "link-to-text-color" %>
    <h2><strong><%= @item.name %></strong></h2>
    <% total = [] %>
    <% @item.reviews.each do |review| %>
      <% keys = [] %>
      <% values = [] %>
      <% review.properties.each do |name, value| %>
        <% keys << name %>
        <% values << value.to_i %>
      <% end %>
      <% total << (values.sum.to_f / keys.uniq.size).round rescue 0 %>
    <% end %>
    <div class="star-rating" data-score= <%= (total.sum.to_f / @item.reviews.count).round rescue 0 %>, style= "zoom:30%;" ></div>
    <br>
    <h5><strong>about</strong></h5>
    <h5><%= @item.content %></h5>
    <br>
    <h5><strong><%=  @item.details.count  %> attributes</strong></h5>

    <% @item.details.each do |detail| %>
      <%= detail.name %>
    <% end %>
    <hr>
    <h5><%= time_ago_in_words(@item.created_at) %> ago</h5>
  </div>

<% end %>
