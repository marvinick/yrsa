<%= div_for @item do %>
  <div class="item_box">
    <p class="item_detail"><%=  @item.details.count  %> attributes</p>
    <div class="row">
      <% @item.details.each do |detail| %>
        <li class="detail-list">
          <p class="detail-name"><%= detail.name %></p>
        </li>
      <% end %>
     </div>

    <p class="item_time">created <%= time_ago_in_words(@item.created_at) %> ago</p>
  </div>

<% end %>
