<nav class="level">
  <div class="level-item has-text-centered">
    <div>
      <p class="heading">project</p>
      <p class="level-item has-text-centered title">
        <%= link_to @project.title, account_project_path(current_account, @project) %>
      </p>
    </div>
  </div>
</nav>

<div class="columns">
  <div class="column is-3"></div>
  <div class="formly column is-6">
    <div class="field">
      <%= form_for([current_account, @project, @item]) do |f| %>
        <%= f.hidden_field :project_id %>
        <div class="control">
          <%= f.text_field :name, placeholder: 'name', label: false, class:"input is-medium" %>
        </div>
        <br>
        <div class="control">
          <%= f.text_area :content, placeholder: 'content', label: false, class:"input is-medium" %>
        </div>
        <br>
        <div>
          <div id="details">
            <%= f.fields_for :details do |detail| %>
              <%= render "detail_fields", f: detail %>
            <% end %>

            <div class="links">
              <%= link_to_add_association 'add detail', f, :details %>
            </div>
          </div>
        </div>
        <br>
        <%= f.button :submit, class:"button is-primary is-medium" %>
        <%= link_to "Back", :back, class: "button is-warning is-medium" %>
      <% end %>
    </div>
  </div>
  <div class="column is-3"></div>
</div>
