<div class="row text-center">
  <h1><%= set_project.title %></h1>
</div>

<%= form_for([current_account, set_project, @item]) do |f| %>
  <div class="formly text-center">
    <h2>new item</h2>
      <br>
      <%= f.hidden_field :project_id %>
      <div class="control">
        <%= f.text_field :name, placeholder: 'name', label: false, class:"input" %>
      </div>
      <br>
      <div class="control">
        <%= f.text_area :content, placeholder: 'content', label: false, class:"input" %>
      </div>
      <br>
      <div class="control">
        <%= f.file_field :image %>
      </div>
    </div>
  </div>
  <div class="links text-center">
    <h3><%= link_to_add_association '+ add detail', f, :details %></h3>
  </div>

  <%= f.fields_for :details do |detail| %>
    <%= render "detail_fields", f: detail %>
  <% end %>

  <div class="row text-center">
    <%= f.submit "make new item", class:"btn btn-default btn-lg" %>
    <%= link_to "never mind", account_project_path(current_account, set_project ), class: "btn btn-default btn-lg" %>
  </div>
<% end %>
