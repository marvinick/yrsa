<%= simple_form_for([current_account, @project, @item]) do |f| %>
  <%= f.hidden_field :project_id %> 
  <%= f.input :name, placeholder: 'name', label: false %>
  <br>
  <%= f.input :content, placeholder: 'content', label: false  %>
  <br>

  <div>
    <p><strong>Details</strong></p>

    <div id="details">
      <%= f.fields_for :details do |detail| %>
        <%= render "detail_fields", f: detail %>
      <% end %>

      <div class="links">
        <%= link_to_add_association 'add detail', f, :details %>
      </div>
    </div>
  </div>

  <%= f.button :submit %>
<% end %>
