<div class="row text-center">
  <p>project</p>
  <h1><%= set_project.title %></h1>
</div>
<br>
<%= form_for([current_account, set_project, @item]) do |f| %>
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-4">
      <h2 class="text-center">new item</h2>
      <br>
      <div class="">
        <%= f.hidden_field :project_id %>
        <div class="control">
          <%= f.text_field :name, placeholder: 'name', label: false, class: "input ", :maxlength => 25, :size => 40 %>
        </div>
        <br>
        <div class="control">
          <%= f.text_field :content, placeholder: 'content', label: false, class: "input", :maxlength => 280, :size => 40  %>
        </div>
        <br>
        <div class="control">
          <%= f.file_field :image, class:"btn btn-default"  %>
        </div>
        
        <div class="control">
          <%= f.collection_check_boxes :detail_ids, set_project.details.all, :id, :name, :item_wrapper_class => 'checkbox_container' do |cb| %>
            <% cb.label(class: "check_box") do %>

              <div class="col-xs-1">
                <%= cb.check_box(class: "check_box") %>
              </div>

              <div class="col-xs-4">
                <%= cb.text %>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
      <br>
      <br>
    </div>
    <div class="col-md-1"></div>
    <div class="col-md-3">

      <h4 class="text-center">add / edit attributes for your users to rate</h4>
      <br>
      <div class="links">
        <h5><%= link_to_add_association ' ', f, :details, class:"fa fa-plus fa-3x" %></h5>
        <%= f.fields_for :details do |detail| %>
          <%= render "detail_fields", f: detail %>
        <% end %>
      </div>
      <br>
      <br>
      <div class="row text-center">
        <%= f.submit "create item", class:"btn btn-warning btn-lg" %>
        <%= link_to "never mind", account_project_path(current_account, set_project ), class: "btn btn-default btn-lg" %>
      </div>
    </div>

    <div class="col-md-2"></div>
  </div>


<% end %>
