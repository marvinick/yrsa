<div class="col-md-3">
  <%= link_to account_project_item_path(current_account, @project, item), class: 'primary-link' do %>
    <div class="card bg-shadow">
      <% if item.image.present? %>
        <%= image_tag item.image, class: "img-fluid" %>
      <% else %>
        <%= image_tag("missing.png", class: "img-fluid") %>
      <% end %>

      <div class="card-body">
        <h5 class="card-title"><%= sanitize truncate(item.name, length: 15) %></h5>
        <p class="card-text grey-text"><%= truncate(item.content, length: 100) %> </p>
        <p class="card-text"><small class="text-muted"><%= time_ago_in_words(item.updated_at) %> ago</small></p>
      </div>
    </div>
  <% end %>
</div>
