<% total = [] %>
<% @item.reviews.each do |review| %>
  <% keys = [] %>
  <% values = [] %>
  <% review.properties.each do |name, value| %>
    <% keys << name %>
    <% values << value.to_i %>
  <% end %>
  <% total << (values.sum.to_f / keys.uniq.size).round rescue 0 %>
<% end %>

<p class="star-rating item-rating" data-score= <%= (total.sum.to_f / @item.reviews.count).round rescue 0 %>, style= "zoom:35%;" ></p>
