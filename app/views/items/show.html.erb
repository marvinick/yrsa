
<div class="row text-center">
  <h4><small>Back to project </small><%= link_to set_project.title, account_project_path(current_account, set_project) %></h4>
  <h3><%= @item.name %></h3>
  <%= image_tag(@item.image.url(:small), class: "img-responsive img-circle") %>
</div>
<br>

<div class="row">
  <div class="col-md-6 text-center">
    <h4><%= @item.content.first(50) %></h4>
    <% if @item.details.count > 1 %>
      <p class="header has-text-centered ">categories </p><p class="title has-text-centered"><%= @item.details.count %></p>
    <% else %>
      <p class="header has-text-centered ">category </p><p class="title has-text-centered"><%= @item.details.count %></p>
    <% end %>

    <% if item_average_rating.present? %>
      <p class="heading has-text-centered"> Item's rating </p>
      <div class="star-rating has-text-centered" data-score= <%= item_average_rating %> ></div>
    <% else %>
      <p class="heading has-text-centered">No reviews yet</p>
    <% end %>
    <br>

    <%= link_to edit_account_project_item_path(current_account, set_project, @item) do %>
      <span class="fa fa-pencil fa-2x"></span>
    <% end %>
  </div>

  <div class="col-md-6 text-center">
    <% if total_reviews > 1 %>
      <p class="header has-text-centered"><%= total_reviews %> reviews</p>
    <% else %>
      <p class="header has-text-centered"><%= total_reviews %> review</p>
    <% end %>
    <br>
    <%= render "stats" %>
  </div>
</div>
<hr>
<div class="row">
  <h3 class="text-center">categories</h3>
  <% @item.details.each do |detail| %>
    <div class="col-xs-6 col-md-4 padding0">
      <div class="boxy">
        <h3><%= link_to content_tag(:span, detail.name), account_project_item_detail_path(current_account, set_project, @item, detail) %></h3>
        <br>
        <h4><%= detail.description %></h4>
        <hr>
        <% detail.reviews.last(1).each do |review| %>
          <small>latest rating</small>
          <div class="star-rating" data-score= <%= review.value %> ></div>
          <small><%= time_ago_in_words(review.created_at) %> ago</small>
        <% end %>
        <br>

        <% total_rv = [] %>
        <% detail.reviews.each do |review| %>
          <% total_rv << review.value %>
        <% end %>
        <small>Average ratings</small>
        <% if total_rv.any? %>
          <div class="star-rating" data-score= <%= total_rv.sum / total_rv.count %> ></div>
        <% else %>
          <small>Nothing yet</small>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
