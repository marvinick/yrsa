<div class="row">
  <%= render "header" %>
</div>

<div class="row">

  <div class="col-md-1"></div>
  <div class="col-md-10">
    <div class="tab">
      <button class="tablinks" onclick="openCity(event, 'cards')" id="defaultOpen"><span class="fa fa-line-chart"></span></button>
      <div class="pull-right">

        <button class="tablinks" onclick="openCity(event, 'lists')"><span class="fa fa-pencil-square-o"></span></button>
      </div>
    </div>
    <div id="cards" class="tabcontent">
      <div class="item-view">
        <%= render "sub_header" %>
        <hr>
        <% if @item.reviews.present? %>
          <%= render "stats" %>
        <% else %>
          <h2 class="text-center" style="color:#94d888;">No reviews yet</h2>
        <% end %>
        <hr>
        <%= render "more_stats" %>
      </div>
    </div>
    <div id="lists" class="tabcontent">

        <% if @item.reviews.present? %>
          <%= render "reviews" %>
        <% else %>
          <div class="boxyy">
            <h2 class="text-center" style="color:#94d888;">No reviews yet</h2>
          </div>
        <% end %>
      </div>
    </div>

  </div>

  <div class="col-md-1"></div>
</div>


<div id="product-modal" class="modal fade"></div>
