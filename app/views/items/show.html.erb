<div class="row">
  <div class="col-md-8">

    <%= render "header" %>
    <br>
    <%= image_tag(@item.image.url(:xlarge), class: "img-responsive img-rounded") %>

    <hr>
    <br>
    <%= render "current_user_review" %>

    <% if @item.reviews.present? %>
      <%= render "reviews" %>
    <% end %>
  </div>
  <div class="col-md-1"></div>

  <div class="col-md-3">
    <%= render "stats" %>
    <%= render "more_stats" %>
    <%= pie_chart set_item.details.group(:name).count %>
  </div>


</div>
