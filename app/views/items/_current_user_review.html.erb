<div class="row">
  <div class="col-md-12 text-center">
    <% if reviewers.include?(current_user.email) %>
      <h5 style="color:red;">You've submitted a review</h5>
    <% else %>
      <h4>Be the first one to review this item</h4>
      <%= link_to "Rate it", new_account_project_item_review_path(current_account, set_project, set_item), remote: true,  class:"btn btn-lg btn-default" %>
    <% end %>

  </div>
</div>
