<%= form_for ([current_account, set_project, @item]), remote: true, html: {} do |f| %>
  <div class="formly">
    <%= f.hidden_field :project_id %>
    <div class="control">
      <%= f.text_field :name, placeholder: 'name', label: false, class: "input ", :maxlength => 25, :size => 40 %>
    </div>
    <br>
    <div class="control">
      <%= f.text_field :content, placeholder: 'content', label: false, class: "input", :maxlength => 280, :size => 40  %>
    </div>
    <br>
    <div class="control">
      <%= f.file_field :image, class:"btn btn-default"  %>
    </div>

    <br>
    <h4>select attributes</h4>

    <%= f.collection_check_boxes :detail_ids, set_project.details.all, :id, :name, :item_wrapper_class => '' do |cb| %>
      <label class="container2">
        <%= cb.label %>
        <%= cb.check_box %>
        <span class="checkmark"></span>

      </label>
    <% end %>

    <div class="row text-center">
      <%= f.submit "submit", class:"btn btn-success btn-lg" %>
      <%= link_to "never mind", account_project_path(current_account, @project), class: "btn btn-default btn-lg" %>
    </div>
  </div>
<% end %>
