<div class="modal-dialog">
  <div class="modal-content">
    <br>
    <h2 class="text-center">new item</h2>
    <br>
    <%= form_for([current_account, set_project, @item]) do |f| %>
      <div class="modal-body">
        <div class="row">
          <div class="col-md-12">
            <%= f.hidden_field :project_id %>
            <div class="control">
              <%= f.text_field :name, placeholder: 'name', label: false, class: "input ", :maxlength => 25, :size => 40 %>
            </div>
            <br>
            <div class="control">
              <%= f.text_area :content, placeholder: 'content', label: false, class: "input-text", :maxlength => 280, :size => 40  %>
            </div>
            <br>
            <div class="control">
              <%= f.file_field :image, class:"btn btn-default control-image"  %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <br>
            <h2>attributes</h2>
          </div>
        </div>
        <br>
        <div class="row">
        <%= f.collection_check_boxes :detail_ids, set_project.details.all, :id, :name, :item_wrapper_class => '' do |cb| %>
          <% cb.label(class: "check_box") do %>
            <div class="col-xs-1 ">
              <%= cb.check_box %>
            </div>
            <div class="col-xs-4">
              <h4><%= cb.text %></h4>
            </div>
          <% end %>
        <% end %>

        </div>
        <br>
        <div class="row text-center">
          <%= f.submit "submit", class:"btn btn-default btn-lg" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
