<div class="row text-center">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <p>edit item</p>
    <h1><%= @item.name %></h1>
    <br>
  </div>
  <div class="col-md-2"></div>
</div>
<%= form_for([current_account, set_project, @item]) do |f| %>
  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-4">

      <h2 class="text-center"></h2>
      <br>
      <div class="">
        <%= f.hidden_field :project_id %>
        <div class="control">
          <%= f.text_field :name, placeholder: 'name', label: false, class: "input ", :maxlength => 25, :size => 40 %>
        </div>
        <br>
        <div class="control">
          <%= f.text_field :content, placeholder: 'content', label: false, class: "input-text", :maxlength => 280, :size => 40  %>
        </div>
        <br>
        <div class="control">
          <%= f.file_field :image, class:"btn btn-default"  %>
        </div>

      </div>
      <br>

    </div>
    <div class="col-md-1"></div>
    <div class="col-md-3">
      <br>
      <h5 class="text-center">add / edit attributes for your users to rate</h5>
      <br>
      <div class="control">
        <%= f.collection_check_boxes :detail_ids, set_project.details.all, :id, :name, :item_wrapper_class => 'checkbox_container' do |cb| %>
          <% cb.label(class: "check_box") do %>

            <div class="col-xs-1">
              <%= cb.check_box(class: "check_box") %>
            </div>

            <div class="col-xs-4">
              <%= cb.text %>
            </div>
          <% end %>
        <% end %>
      </div>

      <br>
      <br>
      <div class="row text-center">
        <%= f.submit "edit", class:"btn btn-warning btn-lg" %>
        <%= link_to "never mind", account_project_path(current_account, set_project ), class: "btn btn-default btn-lg" %>
      </div>
    </div>

    <div class="col-md-2"></div>
  </div>


<% end %>
