<div class="card">
  <div class="card-body">
    <p class="card-text">back to <%= link_to @project.title, account_project_path(current_account, @project) %> </p>
    <h5 class="card-title">Items</h5>
    <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
    <%= link_to "+ New", new_account_project_item_path(current_account, @project, @item), class: " og-item-button btn btn-success pull-left", remote: true %>
  </div>
</div>
<div class="new-item-button"></div>
<div class="my-items"></div>



  <% if @items.present? %>
  <div class='row'>
    <%= render @items %>
  </div>
  <% else %>
    <h3 class="text-center">No items yet</h3>
  <% end %>
