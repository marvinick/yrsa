<%= form_for([current_account, set_project, @item]) do |f| %>
  <div class="formly" id="current-pane">
    <%= f.hidden_field :project_id %>
    <div class="control">
      <%= f.text_field :name, placeholder: 'name', label: false, class: "input ", :maxlength => 25, :size => 40 %>
    </div>
    <br>
    <div class="control">
      <%= f.text_area :content, placeholder: 'content', label: false, class: "input", :maxlength => 280, :size => 40  %>
    </div>
    <br>
    <div class="control">
      <%= f.file_field :image, class:"btn btn-default control-image"  %>
    </div>
    <br>
    <h4>attributes</h4>
    <br>
    <%= f.collection_check_boxes :detail_ids, set_project.details.all, :id, :name, :item_wrapper_class => 'checkbox_container' do |cb| %>
      <label class="container2">
        <%= cb.label %>
        <%= cb.check_box %>
        <span class="checkmark"></span>
      </label>
      <br>
      <br>
    <% end %>

    <div class="row pull-right">
      <%= link_to "remove", [current_account, @project, @item], method: :delete, data: { confirm: "Are you sure you want to remove this?"}, class: "btn btn-danger" %>
      <button href="#current-pane" class="btn btn-xs" data-dismiss="alert" aria-label="close" id="hide">close</button>
      <!-- <%= link_to "cancel", account_project_item_path(current_account, set_project, @item), class: "btn btn-default" %> -->
      <%= f.submit "edit item", class:"btn btn-default" %>
    </div>
    <br>
    <br>
  </div>
<% end %>
