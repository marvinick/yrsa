<%= form_for([current_account, @project, @item], remote: true) do |f| %>
  <div class="formly" id="current-pane">
    <div class="row">
      <%= f.hidden_field :project_id %>
      <%= f.text_field :name, placeholder: 'name', label: false, autofocus: true, class: "input ", :maxlength => 25, :size => 40 %>
      <br>
      <%= f.hidden_field :content, placeholder: 'content', label: false, autofocus: true, class: "extra-input", id: "item-content", :maxlength => 280, :size => 40 %>
      <br>
      <trix-editor input= "item-content" class="trix-content"></trix-editor>
      <br>
      <%= f.file_field :image, class: "dropzone" %>
    </div>
    <br>
    <div class="row">
      <%= f.collection_check_boxes :detail_ids, @project.details.all, :id, :name, :item_wrapper_class => '' do |cb| %>
        <div class="col-md-3">
          <label class="detail-container">
            <%= cb.label %>
            <%= cb.check_box %>
            <span class="checkmark"></span>
          </label>
          <br>
          <br>
        </div>
      <% end %>
    </div>
    <div class="row">
      <div class="pull-left">
        <%= link_to "remove", [current_account, @project, @item], method: :delete, data: { confirm: "Are you sure you want to remove this?"}, class: "btn btn-danger" %>
      </div>
      <div class="pull-right">

        <button href="#current-pane" class="btn btn-default" data-dismiss="alert" aria-label="close" id="hide">close</button>
        <!-- <%= link_to "cancel", account_project_item_path(current_account, @project, @item), class: "btn btn-default" %> -->
        <%= f.submit "edit item", class:"btn btn-success" %>
      </div>
    </div>
  </div>
<% end %>
